<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
  <% if @message.errors.present? %>

    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>

    <!--ここまでで、エラーメッセージ表示-->
    <!--ここから、レイアウト-->
  <div class="form-group">
    <label for="message_name" class="control-label col-md-2">名前:</label>
    <div class="col-md-10" >
      <%= f.text_field :name, class: "form-control", placeholder: "お名前を入力してください"%>
    </div>
  </div>  
    
    <!--ここから内容の部分-->
   <div class="form-group">
    <label for="message_body" class="control-label col-md-2">内容:</label>
    <div class="col-md-10" >
      <%= f.text_area :body, class: "form-control", placeholder: "内容を入力してください" %>
    </div>
   </div>

  <div class="form-group">
    年齢:
  <%= f.text_field :age %>
  <br>
   </div>
   
  <div class="col-md-offset-2 col-md-2">
   <%= f.submit class: "btn btn-sm btn-primary" %>
  </div>
<% end %>
